                    <tr>
                        <th>@skill.Key</th>
                        <td style="--size: calc(@skill.Value/@this.Model.SkillsMax)"><span class="data">@skill.Value</span></td>
                    </tr>
                }
            </table>

            <ul class="grow-0 basis-1/4 charts-css legend legend-circle border-0">
                @foreach (var skill in this.Model.ProgrammingLanguagesFrontend)
                {
                    <li>@skill.Key</li>
                }
            </ul>
        </div>

        <div id="languages-frontend-chart" class="flex flex-row gap-2">
            <table class="grow basis-3/4 charts-css bar show-data-on-hover show-heading reverse">
                <caption>Technologies</caption>
                @foreach (var skill in this.Model.TechnologiesFrontend.OrderByDescending(kv => kv.Value))
                {
                    <tr>
                        <th>@skill.Key</th>
                        <td style="--size: calc(@skill.Value/@this.Model.SkillsMax)"><span class="data">@skill.Value</span></td>
                    </tr>
                }
            </table>

            <ul class="grow-0 basis-1/4 charts-css legend legend-circle border-0">
